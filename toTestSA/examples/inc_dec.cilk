#include "cilk-lib.cilkh"
#include <stdlib.h>
#include <stdio.h>
#define GET(type, var) *(type*)Race_detect_read(_cilk_ws, var)
#define SET(type_var, var) Race_detect_write(_cilk_ws, var, (void*)&type_var)

