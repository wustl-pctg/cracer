cilk void Increment(void * int_i)
{
	int temp;
	printf("starting increment");
	temp = GET(int,int_i) + 1;
	SET(temp, int_i);
	if(GET(int,int_i) < 100)
		spawn Increment(int_i);
}

cilk void Decrement(void * int_i)
{
	int temp;
	printf("starting decrement");
	temp = GET(int,int_i) - 1;
	SET(temp, int_i);
	if(GET(int,int_i) > 0)
		spawn Decrement(int_i);
}

cilk int main(int argc, char *argv[])
{
	void * int_i;
	int temp;
 	printf("just before structure create");
 	int_i = RD_structure_create(_cilk_ws, sizeof(int));
	temp = 3;

	if(argc != 1) {
		fprintf(stderr, "Usage: decentRaceDetection.cilk [<cilk options>]\n");
		Cilk_exit(1);
	}

	SET(temp, int_i);
	spawn Increment( int_i );
	spawn Decrement( int_i );
	printf("i: %i\n", GET(int, int_i) );

	return 0;
}


